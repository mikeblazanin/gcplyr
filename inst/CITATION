year <- sub("-.*", "", meta$Date)
note <- sprintf("version %s", meta$Version)

bibentry(
  bibtype     = "Manual",
  header      = "To cite gcplyr in publications use:",
  title       = "{gcplyr}: manipulation and analysis of growth curves data",
  author      = as.person("Michael Blazanin"),
  year        = year,
  note        = note,
  url         = "https://github.com/mikeblazanin/gcplyr/",
  textVersion = paste0("Blazanin, Michael. ", year, ". 'gcplyr: manipulation and analysis of growth curves data.' R package ", note)
  )
