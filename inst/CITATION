citHeader("To cite gcplyr in publications use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("version %s", meta$Version)

citEntry(
  entry    = "Manual",
  title    = "{gcplyr}: manipulation and analysis of growth curves data",
  author   = as.person("Michael Blazanin"),
  year     = year,
  note     = note,
  url      = "http://github.com/mikeblazanin/gcplyr",
  textVersion = paste(
     "Blazanin, Michael. ", year, ". 'gcplyr: manipulation and analysis of growth curves data.' R package ", note, sep = "")
  )
